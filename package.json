{
  "name": "prime-generator",
  "version": "0.0.1",
  "description": "A simple prime number generator.",
  "author": "Donovan Hutchinson",
  "repository": {
    "type": "git",
    "url": "https://github.com/donovanh/prime-generator"
  },
  "keywords": [
    "prime numbers",
    "demo app"
  ],
  "license": "MIT",
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "browser": "dist/browser/primes.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:module && npm run build:node && npm run build:browser && npm run build:manual",
    "build:module": "tsc --project ./tsconfig.module.json",
    "build:node": "tsc --project ./tsconfig.node.json",
    "build:browser": "rollup -c",
    "build:manual": "cp -R ./dist ./manual-tests/js",
    "test": "jest",
    "watch": "npm test -- --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.node.json && tslint -p tsconfig.browser.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.7",
    "@types/jest": "^27.4.0",
    "babel-jest": "^27.4.6",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.4",
    "rollup": "^2.63.0"
  }
}
